{
  "manifest_version": 3,
  "name": "URL to Google Docs Converter",
  "version": "1.0.0",
  "description": "Extract webpage content from URLs in Google Sheets and save to Google Docs",

  "permissions": [
    "identity",
    "tabs",
    "scripting",
    "activeTab",
    "storage",
    "https://www.googleapis.com/*",
    "https://sheets.googleapis.com/*",
    "https://docs.googleapis.com/*"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "service_worker": "02_background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "03_popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["08_content.js"],
      "run_at": "document_idle"
    }
  ],

  "oauth2": {
    "client_id": "YOUR_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets",
      "https://www.googleapis.com/auth/documents",
      "https://www.googleapis.com/auth/drive.file"
    ]
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}